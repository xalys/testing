{% extends 'base.html.twig' %}

{% block body %}
    <h1>Participants list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Status</th>
                <th>Club</th>
                <th>Gi</th>
                <th>Number</th>
                <th>Datebirth</th>
                <th>Weigth</th>
                <th>Gender</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td><a href="{{ path('participant_show', { 'id': participant.id }) }}">{{ participant.id }}</a></td>
                <td>{{ participant.title }}</td>
                <td>{{ participant.firstname }}</td>
                <td>{{ participant.lastname }}</td>
                <td>{{ participant.status }}</td>
                <td>{{ participant.club }}</td>
                <td>{{ participant.gi }}</td>
                <td>{{ participant.number }}</td>
                <td>{% if participant.dateBirth %}{{ participant.dateBirth|date('Y-m-d') }}{% endif %}</td>
                <td>{{ participant.weigth }}</td>
                <td>{{ participant.gender }}</td>
                <td>{% if participant.created %}{{ participant.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('participant_show', { 'id': participant.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('participant_edit', { 'id': participant.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('participant_new') }}">Create a new participant</a>
        </li>
    </ul>
{% endblock %}
